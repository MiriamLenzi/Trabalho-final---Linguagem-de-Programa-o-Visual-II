@model List<CatalogoDeFilmes.Models.Filme>

@{
    ViewData["Title"] = "Catálogo de Filmes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>🎬 Catálogo de Filmes</h1>
    <div>
        <a asp-action="SearchTmdb" class="btn btn-primary">
            <i class="bi bi-search"></i> Buscar no TMDb
        </a>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Novo Filme
        </a>
        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown">
                <i class="bi bi-download"></i> Exportar
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-action="ExportCsv"><i class="bi bi-file-earmark-spreadsheet"></i> CSV</a></li>
                <li><a class="dropdown-item" asp-action="ExportExcel"><i class="bi bi-file-earmark-excel"></i> Excel</a></li>
            </ul>
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info text-center py-5">
        <i class="bi bi-film" style="font-size: 4rem; opacity: 0.5;"></i>
        <h4 class="alert-heading mt-3">Nenhum filme cadastrado</h4>
        <p>Seu catálogo está vazio. Comece importando filmes do TMDb ou cadastre manualmente.</p>
        <hr>
        <div class="d-flex gap-2 justify-content-center mt-3">
            <a asp-action="SearchTmdb" class="btn btn-primary"><i class="bi bi-search"></i> Buscar no TMDb</a>
            <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Cadastrar Manualmente</a>
        </div>
    </div>
}
else
{
    <div class="mb-3">
        <p class="text-muted"><i class="bi bi-collection"></i> Total de filmes: <strong>@Model.Count</strong></p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var filme in Model)
        {
            <div class="col">
                @await Html.PartialAsync("_FilmeCard", filme)
            </div>
        }
    </div>
}
