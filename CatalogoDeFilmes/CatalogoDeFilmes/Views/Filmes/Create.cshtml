@model CatalogoDeFilmes.Models.Filme

@{
    ViewData["Title"] = "Novo Filme";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>Novo Filme (Manual)</h1>
        <p class="text-muted">Preencha os dados do filme manualmente ou <a asp-action="SearchTmdb">busque no TMDb</a> para importar automaticamente.</p>
        <hr />

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Titulo" class="form-label"></label>
                    <input asp-for="Titulo" class="form-control" required />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="TituloOriginal" class="form-label"></label>
                    <input asp-for="TituloOriginal" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Sinopse" class="form-label"></label>
                <textarea asp-for="Sinopse" class="form-control" rows="4"></textarea>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="DataLancamento" class="form-label"></label>
                    <input asp-for="DataLancamento" type="date" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Duracao" class="form-label"></label>
                    <input asp-for="Duracao" type="number" class="form-control" placeholder="120" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="NotaMedia" class="form-label"></label>
                    <input asp-for="NotaMedia" type="number" step="0.1" min="0" max="10" class="form-control" placeholder="7.5" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Genero" class="form-label"></label>
                    <input asp-for="Genero" class="form-control" placeholder="Ação, Drama, Comédia" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Lingua" class="form-label"></label>
                    <input asp-for="Lingua" class="form-control" placeholder="pt-BR" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ElencoPrincipal" class="form-label"></label>
                <input asp-for="ElencoPrincipal" class="form-control" placeholder="Ator 1, Ator 2, Atriz 3" />
            </div>

            <hr />
            <h5>Localização (opcional - para previsão do tempo)</h5>

            <div class="mb-3">
                <label asp-for="CidadeReferencia" class="form-label"></label>
                <input asp-for="CidadeReferencia" class="form-control" placeholder="São Paulo" />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Latitude" class="form-label"></label>
                    <input asp-for="Latitude" type="number" step="0.000001" class="form-control" placeholder="-23.550520" />
                    <small class="form-text text-muted">Entre -90 e 90</small>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Longitude" class="form-label"></label>
                    <input asp-for="Longitude" type="number" step="0.000001" class="form-control" placeholder="-46.633308" />
                    <small class="form-text text-muted">Entre -180 e 180</small>
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Salvar</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
